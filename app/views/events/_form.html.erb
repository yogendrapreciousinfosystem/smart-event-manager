<% if current_account %>

  <%= form_with model: event, url: events_path, html: { multipart: true } do |form| %>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
      <%= form.hidden_field :account_id, value: current_account.id %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :event_type %>
      <%= form.text_field :event_type, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :start_time %>
      <%= form.datetime_local_field :start_time, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :end_time %>
      <%= form.datetime_local_field :end_time, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :capacity %>
      <%= form.number_field :capacity, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :public %>
      <%= form.check_box :public, class: 'form-check-input' %>
    </div>

    <div class="form-group">
      <%= form.label :event_date %>
      <%= form.date_field :event_date, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :latitude %>
      <%= form.text_field :latitude, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :longitude %>
      <%= form.text_field :longitude, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :location %>
      <%= form.text_field :location, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :notify %>
      <%= form.number_field :notify, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :repeat %>
      <%= form.number_field :repeat, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :notes %>
      <%= form.text_area :notes, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :address %>
      <%= form.text_area :address, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :image %>
      <%= form.file_field :image, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Create Event', class: 'btn btn-primary' %>
    </div>
  <% end %>
    
<% else %>
  <div >
    
  </div>
<% end %>
